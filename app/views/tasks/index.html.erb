<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed %>
    <h4>🎉 <%= link_to "#{task.title}", task_path(task) %></h4>
  <% else %>
    <h4>📌 <%= link_to "#{task.title}", task_path(task) %></h4>
  <% end %>
  <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end %>

<br>
<%= link_to "+ Add a new task", new_task_path() %>
